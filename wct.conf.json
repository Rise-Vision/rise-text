{
  "verbose": true,
  "npm": true,
  "moduleResolution": "node",
  "plugins": {
    "local": {
      "browsers": ["chrome"]
    },
    "istanbul": {
      "reporters": [ "text", "text-summary", "lcov" ],
      "include": [
        "**/src/**/*.js"
      ],
      "exclude": [
        "**/test/**"
      ],
      "thresholds": {
        "global": {
          "branches": 80,
          "lines": 80,
          "functions": 80,
          "statements": 80
        }
      }
    }
  }
}
